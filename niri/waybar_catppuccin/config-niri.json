[{
	"gtk-layer-shell": true,
	"output": "eDP-1",
	"layer": "top",
	"modules-left": ["custom/launcher","wlr/workspaces","custom/updates","custom/media"],
	"modules-center": ["clock", "tray"],
	"modules-right": ["custom/wallpaper","cpu","custom/disk","memory","temperature","backlight","pulseaudio", "battery"],
	
	"pulseaudio": {
		"tooltip": false,
		"scroll-step": 2,
		"format": "{icon} {volume}%",
		"format-muted": "{icon} {volume}%",
		"on-click":"pactl set-sink-mute @DEFAULT_SINK@ toggle",
		"format-icons": {
			"default": ["", "", ""]
		}
	},
  "wlr/workspaces": {
    "all-outputs": true,
    "on-click": "activate",
    "format": "{icon}",
    "format-icons": {
        "1": "<U+F28D>",
        "2": "<U+F28D>",
        "3": "<U+F28D>",
        "4": "<U+F28D>",
        "5": "<U+F28D>",
        "urgent": "<U+F06A>",
        "active": "<U+F111>",
        "default": "<U+F28D>"
    }
},
	"network": {
		"tooltip": false,
		"format-wifi": " ",
		"format-ethernet": "",
        "on-click": "networkmanager_dmenu"
	},
	"backlight": {
		"tooltip": false,
		"format": " {}%",
		"interval":1,
    "on-scroll-up": "brightnessctl s 1%+",
		"on-scroll-down": "brightnessctl s 1%-",
    "on-click": "brightnessctl s 33%",
	},
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": " {capacity}%",
        "format-plugged": " {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["", "", "", "", ""]
    },
	"tray":{
		"icon-size":18,
		"spacing": 10
	},
    
  "clock": {
    "format": "{: %m/%d %H:%M %A}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
  },
  
  "cpu": {
      "interval": 15,
      "format": " {}%",
      "max-length": 10
  },
  "memory": {
      "interval": 30,
      "format": " {}%",
      "max-length": 10
  },
  "custom/launcher":{
      "format": " ",
      "on-click": "wofi --show drun --style=/home/cirno99/.config/wofi/styles.css",
      "on-click-right": "killall wofi"
  },
  "custom/updates":{
      "format": "{} U",
      "exec": "checkupdates | wc -l",
      "exec-if": "[[ $(checkupdates | wc -l) != 0 ]]",
      "interval": 3600,
      "on-click": "foot -e sudo pacman -Syu && notify-send 'The system has been updated' "
  },
  "custom/wallpaper":{
      "format":"",
      "on-click": "sh /home/cirno99/.config/river/change_wallpaper.sh"
  },
	"temperature": {
        "tooltip": false,
		"hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
		"critical-threshold": 80,
		"interval": 5,
		"format": "{icon} {temperatureC}°C",
		"format-icons": ["", "", "", "", ""]
	  },
	"custom/media": {
		"format": "{icon}{}",
		"return-type": "json",
		"on-click-right": "playerctl next",
    "on-click-middle": "playerctl previous",
		"format-icons": {
		  "Playing": " ",
		  "Paused": " "
		},
		"max-length": 20,
		"exec": "playerctl metadata --format '{\"text\": \"{{artist}}-{{title}}\", \"tooltip\": \"{{ playerName }}: {{ artist }} - {{ title }} {{ duration(position) }}|{{ duration(mpris:length) }}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
		"on-click": "playerctl play-pause"
	},
	"custom/disk": {
        "tooltip": false,
        "interval": 60,
        "format": " {}",
        "exec": "~/.config/river/waybar_catppuccin/disk-usage.sh"
  },
}, {
    "mode": "hide",
    "layer": "bottom",
}]
