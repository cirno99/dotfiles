[{
	"gtk-layer-shell": true,
	"output": "eDP-1",
	"layer": "top",
	"modules-left": ["custom/launcher","river/tags","custom/updates","custom/media"],
	"modules-center": ["clock", "tray","custom/uair"],
	"modules-right": ["custom/wallpaper","cpu","custom/disk","memory","temperature","backlight","pulseaudio", "battery"],
	
	"pulseaudio": {
		"tooltip": false,
		"scroll-step": 2,
		"format": "{icon} {volume}%",
		"format-muted": "{icon} {volume}%",
		"on-click":"pactl set-sink-mute @DEFAULT_SINK@ toggle",
		"format-icons": {
			"default": ["ï€¦", "ï€§", "ï€¨"]
		}
	},

  "river/tags": {
		"num-tags": 9
  },
	"network": {
		"tooltip": false,
		"format-wifi": "ï‡« ",
		"format-ethernet": "",
        "on-click": "networkmanager_dmenu"
	},
	"backlight": {
		"tooltip": false,
		"format": "ïƒ« {}%",
		"interval":1,
    "on-scroll-up": "brightnessctl s 1%+",
		"on-scroll-down": "brightnessctl s 1%-",
    "on-click": "brightnessctl s 33%",
	},
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": "ï‡¦ {capacity}%",
        "format-plugged": "ï‡¦ {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
    },
	"tray":{
		"icon-size":18,
		"spacing": 10
	},
    
  "clock": {
    "format": "{:ï€— %m/%d %H:%M %A}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
  },
  
  "cpu": {
      "interval": 15,
      "format": "ï‹› {}%",
      "max-length": 10
  },
  "memory": {
      "interval": 30,
      "format": "ïƒ‰ {}%",
      "max-length": 10
  },
  "custom/launcher":{
      "format": "ïŒƒ ",
      "on-click": "wofi --show drun --style=/home/cirno99/.config/wofi/styles.css",
      "on-click-right": "killall wofi"
  },
  "custom/updates":{
      "format": "{} U",
      "exec": "checkupdates | wc -l",
      "exec-if": "[[ $(checkupdates | wc -l) != 0 ]]",
      "interval": 3600,
      "on-click": "foot -e sudo pacman -Syu && notify-send 'The system has been updated' "
  },
  "custom/wallpaper":{
      "format":"ï€¾",
