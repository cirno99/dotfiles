  },
	"temperature": {
        "tooltip": false,
		"hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
		"critical-threshold": 80,
		"interval": 5,
		"format": "{icon} {temperatureC}Â°C",
		"format-icons": ["ï‹‹", "ï‹Š", "ï‹‰", "ï‹ˆ", "ï‹ˆ"]
	  },
	"custom/media": {
		"format": "{icon}{}",
		"return-type": "json",
		"on-click-right": "playerctl next",
    "on-click-middle": "playerctl previous",
		"format-icons": {
		  "Playing": "ïŒ ",
		  "Paused": "ï‹ "
		},
